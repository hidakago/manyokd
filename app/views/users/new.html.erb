<h1 class="bg-primary"><%= t('view.users.link_to_new_user') %></h1>
<br>
<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-warning" role="alert">
          <h2><%= pluralize(@user.errors.count, t('view.users.error_notification_word') ) %></h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
    </div>
  <% end %>
  <table class="user_input_aria">
    <tr>
      <td>
        <%= form.label :name, t('view.users.user_name') %>
      </td>
      <td>
        <%= form.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :email, t('view.users.user_email') %>
      </td>
      <td>
        <%= form.email_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :password, t('view.users.user_password') %>
      </td>
      <td>
        <%= form.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :password_confirmation, t('view.users.user_password_confirmation') %>
      </td>
      <td>
        <%= form.password_field :password_confirmation %>
      </td>
    </tr>
  </table>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
  <br>
<% end %>
<%= link_to t('view.sessions.link_to_new_session'), new_session_path %>
