<div>
  <p id="notice"><%= notice %></p>
</div>
<div>
  <h1 class="bg-primary"><%= t('view.tasks.link_to_show_task') %></h1>
</div>
<br>
<table class="task_input_aria">
  <tr>
    <td>
      <strong><%= t('view.tasks.task_name') %></strong>
    </td>
    <td>
      <%= @task.name %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('view.tasks.task_description') %></strong>
    </td>
    <td>
      <%= @task.description %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('view.tasks.task_deadline') %></strong>
    </td>
    <td>
      <%= @task.deadline %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('view.tasks.task_status') %></strong>
    </td>
    <td>
      <%= @task.status %>
    </td>
  </tr>
  <tr>
    <td>
      <strong><%= t('view.tasks.task_priority') %></strong>
    </td>
    <td>
      <%= t("enums.task.priority.#{@task.priority}") %>
    </td>
  </tr>
</table>
<br>
<p style="font-weight: bold"><%= t('view.tasks.label_index') %></p>

<% @task.labels.each do |label| %>
  <span class="space10">
    <label style="background-color: orange"><%= label.name %></label>
  </span>
<% end %>
<br>
<br>
<%= link_to t('view.tasks.link_to_edit_task'), edit_task_path(@task) %> |
<%= link_to t('view.tasks.link_to_index_task'), tasks_path %>
